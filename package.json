{
  "name": "@bifravst/eslint-config-typescript",
  "version": "0.0.0-development",
  "description": "ESLint config for all Bifravst projects.",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bifravst/eslint-config-typescript.git"
  },
  "bugs": {
    "url": "https://github.com/bifravst/eslint-config-typescript/issues"
  },
  "homepage": "https://bifravst.github.io/",
  "keywords": [
    "Cloud",
    "IoT",
    "bifravst",
    "AssetTracker",
    "NordicSemiconductor"
  ],
  "author": "Nordic Semiconductor ASA | nordicsemi.no",
  "license": "MIT",
  "dependencies": {
    "@typescript-eslint/eslint-plugin": "^1.13.0",
    "@typescript-eslint/parser": "^2.0.0",
    "eslint-config-prettier": "^6.0.0",
    "prettier": "^1.18.0",
    "lint-staged": "^9.2.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.1.0",
    "@commitlint/config-angular": "^8.1.0",
    "husky": "^3.0.1"
  },
  "peerDependencies": {
    "eslint": "^5.0.0"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -e",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{yml,md,js,json}": [
      "prettier --write",
      "git add"
    ]
  },
  "engines": {
    "node": ">=10.0.0",
    "npm": ">=6.0.0"
  },
  "release": {
    "branch": "saga",
    "remoteTags": true
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "package-lock.json",
    "index.js",
    "LICENSE",
    "README.md",
    ".prettierrc.js",
    "tsconfig.json",
    "templates"
  ]
}
